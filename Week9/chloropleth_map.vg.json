{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "World Population",
  "width": 800,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://github.com/mew619/FIT3179/Week9/world_population_2b.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_populated_places_simple"}
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {"url": "https://github.com/mew619/FIT3179/Week9/world_population.csv"},
        "key": "Country Name",
        "fields": ["2019"]
      }
    },
    {"calculate": "datum.2019 + 0.1", "as": "Population"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Population",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country Name"},
      {"field": "2019", "type": "quantitative"}
    ]
  }

}
