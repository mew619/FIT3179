{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "World Population",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/mew619/FIT3179/main/Week9/world_population_2b.topojson",
    "format": {
          "type": "topojson",
          "feature": "ne_110m_populated_places_simple"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/mew619/FIT3179/main/Week9/world_population.csv"
        },
        "key": "Country",
        "fields": ["Population"]
      }
    }],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Population",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [100000, 5000000, 10000000],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Population", "type": "quantitative"}
    ]
  }

}
